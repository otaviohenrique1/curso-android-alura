<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputCampoNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formulario_produtos_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/formulario_produtos_nome"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputCampoPreco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textInputCampoNome"
        app:layout_constraintStart_toStartOf="@+id/textInputCampoNome"
        app:layout_constraintTop_toBottomOf="@+id/textInputCampoNome">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formulario_produtos_preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/formulario_produtos_preco"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputCampoQuantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textInputCampoPreco"
        app:layout_constraintStart_toStartOf="@+id/textInputCampoPreco"
        app:layout_constraintTop_toBottomOf="@+id/textInputCampoPreco">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formulario_produtos_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/formulario_produtos_quantidade"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/formulario_produtos_cadastrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/formulario_produtos_cadastrar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textInputCampoQuantidade"
        app:layout_constraintStart_toStartOf="@+id/textInputCampoQuantidade" />
</android.support.constraint.ConstraintLayout>